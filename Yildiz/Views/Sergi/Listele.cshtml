@model IEnumerable<Yildiz.Models.Sergi>
@{
    ViewData["Title"] = "Sergiler";
}
<h2>Sergiler</h2>
<p>
    @if (User.IsInRole("Admin"))
    {
        <a class="btn btn-primary" asp-action="Ekle">Yeni Sergi Ekle</a>
    }
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Başlık</th>
            <th>Başlangıç</th>
            <th>Bitiş</th>
            <th>Konum</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Baslik</td>
            <td>@item.BaslangicTarihi.ToShortDateString()</td>
            <td>@item.BitisTarihi.ToShortDateString()</td>
            <td>@item.Konum?.Isim</td>
            <td>
                <a class="btn btn-info btn-sm" asp-action="Detay" asp-route-id="@item.Id">Detay</a>
                @if (User.IsInRole("Admin"))
                {
                    <a class="btn btn-warning btn-sm" asp-action="Duzenle" asp-route-id="@item.Id">Düzenle</a>
                    <a class="btn btn-danger btn-sm" asp-action="Sil" asp-route-id="@item.Id">Sil</a>
                }
            </td>
        </tr>
    }
    </tbody>
</table> 