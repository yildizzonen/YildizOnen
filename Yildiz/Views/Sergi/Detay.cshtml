@model Yildiz.Models.Sergi
@{
    ViewData["Title"] = "Sergi Detay";
}
<h2>Sergi Detay</h2>
<dl class="row">
    <dt class="col-sm-2">Başlık</dt>
    <dd class="col-sm-10">@Model.Baslik</dd>
    <dt class="col-sm-2">Başlangıç Tarihi</dt>
    <dd class="col-sm-10">@Model.BaslangicTarihi.ToShortDateString()</dd>
    <dt class="col-sm-2">Bitiş Tarihi</dt>
    <dd class="col-sm-10">@Model.BitisTarihi.ToShortDateString()</dd>
    <dt class="col-sm-2">Konum</dt>
    <dd class="col-sm-10">@Model.Konum?.Isim</dd>
</dl>
<a class="btn btn-secondary" asp-action="Listele">Geri Dön</a> 
 