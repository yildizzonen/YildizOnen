<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Yildiz</title>

    
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />

    
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />

    
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        
        .navbar {
            background: linear-gradient(90deg, #0f2027, #203a43, #2c5364);
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
            transition: all 0.3s ease;
        }

        
        .navbar.scrolled {
            background: #2c3e50 !important;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.5);
        }

        .navbar-nav .nav-link {
            color: #fff !important;
            margin-right: 15px;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
        }

        .navbar-nav .nav-link i {
            margin-right: 6px;
        }

        .navbar-nav .nav-link:hover {
            color: #ffc107 !important;
            transform: scale(1.1);
            text-shadow: 0 0 10px #ffc107;
        }

        .navbar-brand {
            font-weight: bold;
            font-size: 1.6rem;
            transition: transform 0.3s ease;
        }

        .navbar-brand:hover {
            transform: scale(1.1) rotate(-2deg);
        }

        
        .btn-animated {
            transition: all 0.4s ease;
        }

        .btn-animated:hover {
            transform: translateY(-3px) scale(1.05);
            box-shadow: 0 6px 15px rgba(255, 193, 7, 0.6);
        }

        
        footer {
            background-color: #2c3e50;
            color: #bdc3c7;
        }

        footer a {
            color: #f1c40f;
            transition: color 0.3s ease, text-decoration 0.3s ease;
        }

        footer a:hover {
            color: #fff;
            text-decoration: underline;
        }

        
        main {
            animation: fadeIn 0.8s ease-out;
        }

        @@keyframes fadeIn {
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 1; transform: translateY(0); }
        }
    </style>
</head>
<body>

    
    <nav class="navbar navbar-expand-lg navbar-dark shadow-sm sticky-top">
        <div class="container">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">Anasayfa</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="SanatEseri" asp-action="Listele">
                            <i class="fas fa-paint-brush"></i> Sanat Eserleri
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Sanatci" asp-action="Listele">
                            <i class="fas fa-user"></i> Sanatçılar
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Sergi" asp-action="Listele">
                            <i class="fas fa-landmark"></i> Sergiler
                        </a>
                    </li>
                    
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="GaleriKonum" asp-action="Listele">
                            <i class="fas fa-map-marker-alt"></i> Galeri Konumları
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Islem" asp-action="Listele">
                            <i class="fas fa-exchange-alt"></i> İşlemler
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Iletisim" asp-action="Index">
                            <i class="fas fa-address-book"></i> İletişim
                        </a>
                    </li>

                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link text-warning fw-bold" asp-controller="Admin" asp-action="Index">
                                <i class="fas fa-tools"></i> Admin
                            </a>
                        </li>
                    }
                </ul>

                <ul class="navbar-nav">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <form asp-controller="Kullanici" asp-action="CikisYap" method="post" class="d-inline">
                                <button type="submit" class="btn btn-warning btn-sm btn-animated">
                                    <i class="fas fa-sign-out-alt"></i> Çıkış Yap
                                </button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="btn btn-outline-light btn-sm me-2 btn-animated" asp-controller="Kullanici" asp-action="GirisYap">
                                <i class="fas fa-sign-in-alt"></i> Giriş Yap
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-warning btn-sm btn-animated" asp-controller="Kullanici" asp-action="KayitOl">
                                <i class="fas fa-user-plus"></i> Kayıt Ol
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- Sayfa İçeriği -->
    <div class="container my-4">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    
    <footer class="text-center py-3">
        <div class="container">
            &copy; 2025 - Yildiz | <a asp-controller="Home" asp-action="Privacy">Gizlilik Politikası</a>
        </div>
    </footer>

   
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        
        window.addEventListener('scroll', function () {
            var navbar = document.querySelector('.navbar');
            if (window.scrollY > 50) {
                navbar.classList.add('scrolled');
            } else {
                navbar.classList.remove('scrolled');
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
