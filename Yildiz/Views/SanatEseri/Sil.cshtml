@model Yildiz.Models.SanatEseri
@{
    ViewData["Title"] = "Sanat Eseri Sil";
}
<h2>Sanat Eseri Sil</h2>
<h4>Bu sanat eserini silmek istediğinize emin misiniz?</h4>
<dl class="row">
    <dt class="col-sm-2">Başlık</dt>
    <dd class="col-sm-10">@Model.Baslik</dd>
    <dt class="col-sm-2">Sanatçı</dt>
    <dd class="col-sm-10">@Model.Sanatci?.Isim</dd>
</dl>
<form asp-action="SilOnay" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Sil</button>
    <a class="btn btn-secondary" asp-action="Listele">İptal</a>
</form> 