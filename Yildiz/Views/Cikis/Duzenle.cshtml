@model Yildiz.Models.Cikis
@{
    ViewData["Title"] = "Çıkış Düzenle";
}
<h2>Çıkış Düzenle</h2>
<form asp-action="Duzenle" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="SanatEseriId">Sanat Eseri</label>
        <input asp-for="SanatEseriId" class="form-control" />
        <span asp-validation-for="SanatEseriId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CikisTarihi"></label>
        <input asp-for="CikisTarihi" class="form-control" type="date" />
        <span asp-validation-for="CikisTarihi" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>
    <a class="btn btn-secondary" asp-action="Listele">İptal</a>
</form>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 