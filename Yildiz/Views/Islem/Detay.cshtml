@model Yildiz.Models.Islem
@{
    ViewData["Title"] = "İşlem Detay";
}
<h2>İşlem Detay</h2>
<dl class="row">
    <dt class="col-sm-2">Sanat Eseri</dt>
    <dd class="col-sm-10">@Model.SanatEseri?.Baslik</dd>
    <dt class="col-sm-2">İşlem Tarihi</dt>
    <dd class="col-sm-10">@Model.IslemTarihi.ToShortDateString()</dd>
    <dt class="col-sm-2">Açıklama</dt>
    <dd class="col-sm-10">@Model.Aciklama</dd>
    <dt class="col-sm-2">Giriş mi?</dt>
    <dd class="col-sm-10">@(Model.GirisMi ? "Evet" : "Hayır")</dd>
</dl>
<a class="btn btn-secondary" asp-action="Listele">Geri Dön</a> 