@model Yildiz.Models.Sanatci
@{
    ViewData["Title"] = "Sanatçı Düzenle";
}
<h2>Sanatçı Düzenle</h2>
<form asp-action="Duzenle" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Isim"></label>
        <input asp-for="Isim" class="form-control" />
        <span asp-validation-for="Isim" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DogumTarihi"></label>
        <input asp-for="DogumTarihi" class="form-control" type="date" />
        <span asp-validation-for="DogumTarihi" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="UyrukId">Uyruk</label>
        <input asp-for="UyrukId" class="form-control" />
        <span asp-validation-for="UyrukId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>
    <a class="btn btn-secondary" asp-action="Listele">İptal</a>
</form>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 