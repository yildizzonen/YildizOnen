@model Yildiz.Models.Sanatci
@{
    ViewData["Title"] = "Sanatçı Sil";
}
<h2>Sanatçı Sil</h2>
<h4>Bu sanatçıyı silmek istediğinize emin misiniz?</h4>
<dl class="row">
    <dt class="col-sm-2">İsim</dt>
    <dd class="col-sm-10">@Model.Isim</dd>
</dl>
<form asp-action="SilOnay" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Sil</button>
    <a class="btn btn-secondary" asp-action="Listele">İptal</a>
</form> 