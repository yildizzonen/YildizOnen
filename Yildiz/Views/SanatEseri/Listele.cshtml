@model IEnumerable<Yildiz.Models.SanatEseri>
@{
    ViewData["Title"] = "Sanat Eserleri";
}
<h2>Sanat Eserleri</h2>
<p>
    @if (User.IsInRole("Admin"))
    {
        <a class="btn btn-primary" asp-action="Ekle">Yeni Eser Ekle</a>
    }
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Başlık</th>
            <th>Sanatçı</th>
            <th>Yıl</th>
            <th>Açıklama</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Baslik</td>
            <td>@item.Sanatci?.Isim</td>
            <td>@item.Yil</td>
            <td>@item.Aciklama</td>
            <td>
                <a class="btn btn-info btn-sm" asp-action="Detay" asp-route-id="@item.Id">Detay</a>
                @if (User.IsInRole("Admin"))
                {
                    <a class="btn btn-warning btn-sm" asp-action="Duzenle" asp-route-id="@item.Id">Düzenle</a>
                    <a class="btn btn-danger btn-sm" asp-action="Sil" asp-route-id="@item.Id">Sil</a>
                }
            </td>
        </tr>
    }
    </tbody>
</table> 