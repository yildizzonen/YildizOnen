@model Yildiz.Models.Giris
@{
    ViewData["Title"] = "Giriş Sil";
}
<h2>Giriş Sil</h2>
<h4>Bu girişi silmek istediğinize emin misiniz?</h4>
<dl class="row">
    <dt class="col-sm-2">Sanat Eseri</dt>
    <dd class="col-sm-10">@Model.SanatEseri?.Baslik</dd>
</dl>
<form asp-action="SilOnay" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Sil</button>
    <a class="btn btn-secondary" asp-action="Listele">İptal</a>
</form> 