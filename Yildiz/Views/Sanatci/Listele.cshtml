@model IEnumerable<Yildiz.Models.Sanatci>
@{
    ViewData["Title"] = "Sanatçılar";
}
<h2>Sanatçılar</h2>
<p>
    @if (User.IsInRole("Admin"))
    {
        <a class="btn btn-primary" asp-action="Ekle">Yeni Sanatçı Ekle</a>
    }
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>İsim</th>
            <th>Doğum Tarihi</th>
            <th>Uyruk</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Isim</td>
            <td>@item.DogumTarihi.ToShortDateString()</td>
            <td>@item.Uyruk?.Isim</td>
            <td>
                <a class="btn btn-info btn-sm" asp-action="Detay" asp-route-id="@item.Id">Detay</a>
                @if (User.IsInRole("Admin"))
                {
                    <a class="btn btn-warning btn-sm" asp-action="Duzenle" asp-route-id="@item.Id">Düzenle</a>
                    <a class="btn btn-danger btn-sm" asp-action="Sil" asp-route-id="@item.Id">Sil</a>
                }
            </td>
        </tr>
    }
    </tbody>
</table> 